<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />

<div class="books-container row">
    <div class="categories-section col-4">
        <div class="current-path mb-4">
            <a class="text-decoration-none primary-color fw-bold">Khám phá</a>
            <span> > </span>
            <span class="fw-bold">Kinh tế</span>
        </div>

        <div class="categories-filter mb-4">
            <div class="card-title">
                <h5 class="primary-color border-bottom pb-2 mb-0 fw-bolder">Khám phá theo danh mục</h5>
            </div>

            <div class="accordion" id="categoryAccordion">
                <!-- Văn học -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed primary-color" type="button" data-bs-toggle="collapse" data-bs-target="#vanhoc">
                            Văn học
                        </button>
                    </h2>
                    <div id="vanhoc" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Tiểu thuyết</a></li>
                                <li><a href="#">Truyện ngắn</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Kinh tế -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#kinhte">
                            Kinh tế
                        </button>
                    </h2>
                    <div id="kinhte" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Quản trị - Lãnh đạo</a></li>
                                <li><a href="#">Nhân vật - Bài học kinh doanh</a></li>
                                <li><a href="#">Bán hàng</a></li>
                                <li><a href="#">Phân tích kinh tế</a></li>
                                <li><a href="#">Khởi nghiệp</a></li>
                                <li><a href="#">Đầu tư</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Tâm lý - Kỹ năng sống -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#tamly">
                            Tâm lý - Kỹ năng sống
                        </button>
                    </h2>
                    <div id="tamly" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Phát triển bản thân</a></li>
                                <li><a href="#">Tâm lý học</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Thiếu nhi -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#thieunhi">
                            Thiếu nhi
                        </button>
                    </h2>
                    <div id="thieunhi" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Truyện tranh</a></li>
                                <li><a href="#">Truyện cổ tích</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Tiểu sử - Hồi ký -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#tieusu">
                            Tiểu sử - Hồi ký
                        </button>
                    </h2>
                    <div id="tieusu" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Người nổi tiếng</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Sách học ngoại ngữ -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ngoaingu">
                            Sách học ngoại ngữ
                        </button>
                    </h2>
                    <div id="ngoaingu" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#">Tiếng Anh</a></li>
                                <li><a href="#">Tiếng Nhật</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- end accordion -->
        </div>

        <div class="categories-filter mt-4">
            <div class="specific-section border-bottom primary-color pb-3">
                <div class="specific-section-title">
                    <h5 class="primary-color fw-bold">Đánh giá</h5>
                </div>
                <div class="specific-filter-body">
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="fivestar" class="checkbox-filter" />
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <span>từ 5 sao</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="fourstar" class="checkbox-filter" />
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star" style="color: gold;"></i>
                        <span>từ 4 sao</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="threestar" class="checkbox-filter" />
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star-fill" style="color: gold;"></i>
                        <i class="bi bi-star" style="color: gold;"></i>
                        <i class="bi bi-star" style="color: gold;"></i>
                        <span>từ 3 sao</span>
                    </div>
                </div>
            </div>

            <div class="specific-section border-bottom primary-color pb-3 mt-4">
                <div class="specific-section-title">
                    <h5 class="primary-color fw-bold">Giá</h5>
                </div>
                <div class="specific-filter-body">
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="priceUnder80" class="checkbox-filter" />
                        <span>0đ - 80.000đ</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="priceUnder140" class="checkbox-filter" />
                        <span>80.000đ - 140.000đ</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="priceUnder250" class="checkbox-filter" />
                        <span>140.000đ - 250.000đ</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="priceOver250" class="checkbox-filter" />
                        <span>Trên 250.000đ</span>
                    </div>

                </div>
            </div>

            <div class="specific-section border-bottom primary-color pb-3 mt-4">
                <div class="specific-section-title">
                    <h5 class="primary-color fw-bold">Nhà xuất bản</h5>
                </div>
                <div class="specific-filter-body">
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="nxbNhaNam" class="checkbox-filter" />
                        <span>Nhã Nam</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="nxbTre" class="checkbox-filter" />
                        <span>NXB Trẻ</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="nxbKimDong" class="checkbox-filter" />
                        <span>NXB Kim Đồng</span>
                    </div>
                    <div class="specific-filter-body-detail">
                        <input type="checkbox" name="skybooks" class="checkbox-filter" />
                        <span>SkyBooks</span>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="book-section col-8 row row-cols-1 row-cols-md-3 g-4">
        @for (int i = 0; i < 21; i++)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="images/book.png" class="card-img-top" alt="Tên sách">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" style="font-size: 1rem;">Người Đàn Ông Mang Tên OVE (Tái Bản)</h5>
                        <p class="card-text text-muted mb-1" style="font-size: 0.8rem">Fredrik Backman</p>

                        <div class="row d-flex align-content-center">
                            <p class="mb-1 col-8">
                                <span class="text-danger fw-bold me-2 d-block">120.000đ</span>
                                <span class="text-decoration-line-through text-muted" style="font-size: 0.8rem">150.000đ</span>
                            </p>

                            <button class="btn cart-button mt-0 col-2">
                                <i class="bi bi-cart-plus fw-bold text-white"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link primary-color" href="#" tabindex="-1">Trước</a>
        </li>
        <li class="page-item"><a class="page-link primary-color" href="#">1</a></li>
        <li class="page-item"><a class="page-link primary-color" href="#">2</a></li>
        <li class="page-item"><a class="page-link primary-color" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link primary-color" href="#">Sau</a>
        </li>
    </ul>
</nav>
