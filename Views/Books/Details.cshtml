        </div>
    </div>

    <div class="explore-container mt-4">
        <h2 class="primary-color fw-bold" style="1.4rem">Khám phá thêm</h2>

        <div class="row row-cols-4 g-3">
            @foreach (BookViewModel book in Model.ListBook)
            {
                <a asp-action="Details" asp-route-id="@book.Id" class="text-decoration-none">
                    <div class="col">
                        <div class="card  shadow-sm">
                            <img src="@book.ImageUrl" class="card-img-top" alt="Tên sách">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title primary-color" style="font-size: 1.1rem;">@book.BookName</h5>
                                <p class="card-text text-muted mb-1" style="font-size: 0.8rem">@book.Author</p>

                                <div class="row d-flex align-content-center">
                                    <p class="mb-1 col-8">
                                        <span class="text-danger fw-bold me-2 d-block">@book.SecondPrice.ToString("N0")₫</span>
                                        <span class="text-decoration-line-through text-muted" style="font-size: 0.8rem">@book.FirstPrice.ToString("N0")₫</span>
                                    </p>

                                    <button class="btn cart-button mt-0 col-2 require-login">
                                        <i class="bi bi-cart-plus fw-bold text-white"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
	// JavaScript for quantity selector
	let quantity = 1;
	const quantityDisplay = document.getElementById('quantity');

	function changeQuantity(change) {
		quantity += change;
		if (quantity < 1) quantity = 1; // Prevent quantity from going below 1
		quantityDisplay.value = quantity;
	}
</script>