@model RegisterViewModel

@{
    ViewBag.Title = "Đăng ký - BookNest";
    Layout = null; /* Hoặc Layout = "~/Views/Shared/_LayoutLogin.cshtml"; nếu bạn có layout riêng cho trang login */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #6E4B3A;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .signup-container {
            background-color: #FFF;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 900px;
            width: 900px;
            box-sizing: border-box
        }
        .signup-form {
            padding: 40px;
        }
        .illustration-section {
            background-color: #F5E9D6;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .btn-signup {
            background-color: #A67C52;
            border: none;
            color: white;
        }
        .btn-login {
            background-color: #FFF;
            border: 1px solid #A67C52;
            color: #D4A017;
        }
        .social-login a {
            color: #6E4B3A;
            text-decoration: none;
        }

        .text-color {
            color: #6E4B3A;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <form asp-action="Register" method="POST" class="signup-container d-flex flex-column flex-md-row">

        <!-- Left Section: Illustration -->
        <div class="illustration-section col-md-4">
            <img src="~/images/Illustration.png" alt="Illustration"
                 style="width: 100%; height: 100%; object-fit: cover;" />
        </div>
        <!-- Right Section: Sign Up Form -->
        <div class="signup-form col-md-8">
            <h3 class="mb-4">
                <img src="/images/logo-1.png" alt="BookNest Icon" class="me-2"> 
                <span class="text-color">BookNest</span>
            </h3>
            <h4 class="mb-3 text-color">Sign up</h4>
            <p class="text-color mb-4">Don't have an account? Sign up now'</p>
            <div class="row mb-3">
                <div class="col">
                    <label class="form-label fw-bold text-color">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="form-label fw-bold text-color">Last Name</label>
                    <input asp-for ="LastName" type="text" class="form-control" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label class="form-label fw-bold text-color">Email</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="example@gmail.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="form-label fw-bold text-color">Phone</label>
                    <input asp-for="Phone" type="text" class="form-control" placeholder="0123456789">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold text-color"></label>
                <input asp-for="Password" class="form-control" placeholder="••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold text-color">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="terms">
                <label class="form-check-label" for="terms">I agree to all the Term and Privacy Policies</label>
            </div>
            <div class="d-flex gap-3 mb-3">
                <button type="submit" class="btn btn-signup w-50">Sign up</button>
                <a asp-action="Login" class="btn btn-login w-50">Login</a>
            </div>
            <p class="text-muted">
                Or login with
                <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="fw-bold text-color ms-1 ps-sm">Google</a>
            </p>
        </div>
    </form>
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @await Html.PartialAsync("_ToastNoti")
}
