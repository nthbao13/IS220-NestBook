@{
    ViewData["Title"] = "Thanh toán thất bại";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="text-danger">Thanh toán thất bại</h2>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <p>Đã có lỗi xảy ra trong quá trình thanh toán. Vui lòng thử lại.</p>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Về trang chủ</a>
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Về giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>