@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập - BookNest";
    Layout = null; /* Hoặc Layout = "~/Views/Shared/_LayoutLogin.cshtml"; nếu bạn có layout riêng cho trang login */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #6E4B3A;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #FFF;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 900px;
            width: 900px;
        }

        .login-form {
            padding: 40px;
        }

        .illustration-section {
            background-color: #F5E9D6;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-login {
            background-color: #A67C52;
            border: none;
            color: white;
        }

            .btn-login:hover {
                opacity: 0.6;
            }

        .btn-signup {
            background-color: #FFF;
            border: 1px solid #A67C52;
            color: #A67C52;
        }

            .btn-signup:hover {
                opacity: 0.6;
            }

        .social-login a {
            color: #666;
            text-decoration: none;
        }

        .text-color {
            color: #6E4B3A;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <form method="POST" asp-action="Login" class="login-container d-flex flex-column flex-md-row">
        <!-- Left Section: Login Form -->
        <div class="login-form col-md-6">
            <h3 class="mb-4">
                <img src="/images/logo-1.png" alt="BookNest Icon" class="me-2 text-color">
                <span class="text-color">BookNest</span>
            </h3>
            <h4 class="mb-3 text-color">LOGIN</h4>
            <p class="mb-4 text-color">Welcome Back. Please login to your account</p>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold text-color"></label>
                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold text-color"></label>
                <input asp-for="Password" class="form-control" placeholder="••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label text-color" for="rememberMe">Remember me</label>
                </div>
                <a asp-action="EnterEmail" class="text-color">Forgot password?</a>
            </div>
            <div class="d-flex gap-3 mb-3">
                <button type="submit" class="btn btn-login w-50">LOGIN</button>
                <a asp-action="Register" class="btn btn-signup w-50">SIGN UP</a>
            </div>
            <p class="text-muted">
                Or login with
                <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="fw-bold text-color ms-1 ps-sm">Google</a>
            </p>

        </div>
        <!-- Right Section: Illustration -->
        <div class="illustration-section col-md-6">
            <img src="~/images/Illustration.png" alt="Illustration" 
            style="width: 100%; height: 100%; object-fit: cover;"  />
        </div>
    </form>
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
