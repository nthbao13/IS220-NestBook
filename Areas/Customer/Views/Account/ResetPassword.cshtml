@model ResetPasswordViewModel

@{
    ViewBag.Title = "Cập nhật mật khẩu - BookNest";
    Layout = null; /* Hoặc Layout = "~/Views/Shared/_LayoutLogin.cshtml"; nếu bạn có layout riêng cho trang login */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #6E4B3A;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
            width: 900px;
            max-width: 900px;
            background-color: #F5E9D7;
        }

        .left-section {
            background-color: #FFF;
            padding: 30px;
        }

        .right-section {
            background-color: #F5E9D7;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-submit {
            background-color: #6E4B3A;
            border: none;
            color: white;
            font-weight: 600;
            width: 100%;
        }

            .btn-submit:hover {
                opacity: 0.7;
            }

        .social-login a {
            color: #666;
            text-decoration: none;
            margin: 0 10px;
        }

            .social-login a:hover {
                text-decoration: underline;
            }

        .text-color {
            color: #6E4B3A;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="card shadow">
        <div class="row g-0">
            <!-- Left Section: Form -->
            <div class="col-md-6 left-section">
                <div class="d-flex align-items-center mb-3">
                    <img src="/images/logo-1.png" alt="BookNest Icon" class="me-2">
                    <h5 class="mb-0 text-color">BookNest</h5>
                </div>
                <a asp-action="Login" class="d-block mb-3 text-decoration-none fw-bold text-color">
                    &larr; Back to login
                </a>
                <h4 class="text-color">Create a new password</h4>
                <p class="mt-2 mb-2">Your new password should be differnt from previous password.</p>
                <form method="POST" asp-action="ResetPassword" class="mt-2">
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-color">Create Password</label>
                        <input asp-for="Password" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold text-color">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-submit">Set Password</button>
                </form>
                <div class="social-login text-center mt-3">
                    <p class="text-muted">
                        Or login with
                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="fw-bold text-color ms-1 ps-sm">Google</a>
                    </p>
                </div>
            </div>
            <!-- Right Section: Illustration Placeholder -->
            <div class="col-md-6 right-section">
                <div class="text-center">
                    <img src="~/images/Illustration.png" alt="Illustration"
                         style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

