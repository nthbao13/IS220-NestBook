@model BookNest.Models.MappingDBModel.Voucher

@{
    ViewBag.Title = "Chi tiết voucher";
}

<div class="container-fluid">
    <h2 class="mb-4">Chi tiết voucher: @Model.VoucherCode</h2>

    <div class="stat-card mb-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="VoucherCode" class="form-label">Mã voucher</label>
                        <input asp-for="VoucherCode" class="form-control" required />
                        <span asp-validation-for="VoucherCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Type" class="form-label">Loại voucher</label>
                        <select asp-for="Type" class="form-control" required>
                            @if (Model.Type == false)
                            {
                                <option value="false" selected>Giảm giá cố định</option>
                                <option value="true">Giảm giá phần trăm</option>
                            }
                            else
                            {
                                <option value="false">Giảm giá cố định</option>
                                <option value="true" selected>Giảm giá phần trăm</option>
                            }
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Value" class="form-label">Giá trị</label>
                        <input asp-for="Value" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CreateAt" class="form-label">Ngày tạo</label>
                        <input asp-for="CreateAt" class="form-control" type="date" required />
                        <span asp-validation-for="CreateAt" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ExpiredAt" class="form-label">Ngày hết hạn</label>
                        <input asp-for="ExpiredAt" class="form-control" type="date" required />
                        <span asp-validation-for="ExpiredAt" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UsageLimit" class="form-label">Giới hạn sử dụng</label>
                        <input asp-for="UsageLimit" class="form-control" type="number" required />
                        <span asp-validation-for="UsageLimit" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UsedCount" class="form-label">Số lần đã sử dụng</label>
                        <input asp-for="UsedCount" class="form-control" type="number" readonly />
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Cập nhật</button>
                <a href="@Url.Action("Index", "Voucher")" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}