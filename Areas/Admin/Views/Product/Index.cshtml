@model List<BookNest.Models.MappingDBModel.Book>
@using BookNest.Models.MappingDBModel;

@{
    ViewBag.Title = "Quản lý sản phẩm";
    int pageNumber = ViewBag.PageNumber ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalItems = ViewBag.TotalItems ?? 0;
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
}

<div class="container-fluid">
    <h2 class="mb-4">Danh sách sách</h2>

    <!-- Search and Filter -->
    <div class="stat-card mb-4">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên sách..." value="@ViewBag.SearchString" />
            </div>
            <div class="col-md-3">
                <select name="parentCategoryId" class="form-control">
                    <option value="">Tất cả danh mục cha</option>
                    @foreach (var parentCategory in ViewBag.ParentCategories as List<ParentCategory>)
                    {
                        if (ViewBag.ParentCategoryId == parentCategory.Id.ToString())
                        {
                            <option value="@parentCategory.Id" selected>@parentCategory.Type</option>
                        }
                        else
                        {
                            <option value="@parentCategory.Id">@parentCategory.Type</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select name="publisherId" class="form-control">
                    <option value="">Tất cả nhà xuất bản</option>
                    @foreach (var publisher in ViewBag.Publishers as List<Publisher>)
                    {
                        if (ViewBag.PublisherId == publisher.Id.ToString())
                        {
                            <option value="@publisher.Id" selected>@publisher.Name</option>
                        }
                        else
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search"></i> Lọc</button>
            </div>
        </form>
    </div>

    <!-- Add New Book Button -->
    <div class="mb-3">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm sách mới</a>
    </div>

    <!-- Book List -->
    <div class="stat-card">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên sách</th>
                        <th>Tác giả</th>
                        <th>Nhà xuất bản</th>
                        <th>Danh mục</th>
                        <th>Giá bán</th>
                        <th>Tồn kho</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.BookName</td>
                            <td>@book.Author</td>
                            <td>@book.Publisher?.Name</td>
                            <td>@book.Category?.Name (@book.Category?.ParentCategory?.Type)</td>
                            <td>@book.SecondPrice?.ToString("N0") VNĐ</td>
                            <td>
                                @{
                                    string stockClass = book.Quantity == 0 ? "text-danger" : (book.Quantity < 10 ? "text-warning" : "text-success");
                                    string stockText = book.Quantity == 0 ? "Hết hàng" : (book.Quantity < 10 ? "Sắp hết" : "Còn hàng");
                                }
                                <span class="@stockClass">@stockText (@book.Quantity)</span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Product", new { id = book.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
            <ul class="pagination">
                @if (pageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber - 1, searchString = ViewBag.SearchString, parentCategoryId = ViewBag.ParentCategoryId, publisherId = ViewBag.PublisherId })">Trước</a>
                    </li>
                }
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == pageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, searchString = ViewBag.SearchString, parentCategoryId = ViewBag.ParentCategoryId, publisherId = ViewBag.PublisherId })">@i</a>
                    </li>
                }
                @if (pageNumber < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber + 1, searchString = ViewBag.SearchString, parentCategoryId = ViewBag.ParentCategoryId, publisherId = ViewBag.PublisherId })">Sau</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <link href="/css/PagedList.css" rel="stylesheet" type="text/css" />
}